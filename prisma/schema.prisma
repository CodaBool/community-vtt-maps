generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // There seems to be a bug with prisma that it needs the non-pool url
  // https://github.com/prisma/prisma/issues/19415
  // url      = env("DATABASE_URL")
  url       = env("DIRECT_URL")
  directUrl = env("DIRECT_URL")
}

model Comment {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  content    String
  published  Boolean  @default(false)
  questionId Int
  question   Question @relation(fields: [questionId], references: [id])
}

model Question {
  id        Int       @id @default(autoincrement())
  title     String    @db.VarChar(255)
  createdAt DateTime  @default(now()) @db.Timestamp(6)
  content   String
  published Boolean   @default(false)
  comments  Comment[]
  resolved  Boolean   @default(false)
  map       String
}

// authentication prisma schema
// https://authjs.dev/getting-started/adapters/prisma#schema
// I found that most fields were optional and could be removed
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}
